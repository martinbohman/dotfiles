[
{ "keys": ["ctrl+tab"], "command": "next_view" },
{ "keys": ["ctrl+shift+tab"], "command": "prev_view" },
{ "keys": ["alt+up"], "command": "scroll_lines", "args": {"amount": 5.0} },
{ "keys": ["alt+down"], "command": "scroll_lines", "args": {"amount": -5.0} },
// move
{ "keys": ["ctrl+i"], "command": "move", "args": {"by": "lines", "forward": false}},
{ "keys": ["ctrl+k"], "command": "move", "args": {"by": "lines", "forward": true}},
{ "keys": ["ctrl+l"], "command": "move", "args": {"by": "characters", "forward": true}},
{ "keys": ["ctrl+j"], "command": "move", "args": {"by": "characters", "forward": false}},
{ "keys": ["ctrl+super+l"], "command": "move_to", "args": {"to": "eol", "extend": false}},
{ "keys": ["ctrl+super+j"], "command": "move_to", "args": {"to": "bol", "extend": false}},
{ "keys": ["ctrl+super+k"], "command": "move_to", "args": {"to": "eof", "extend": false}},
{ "keys": ["ctrl+super+i"], "command": "move_to", "args": {"to": "bof", "extend": false}},

// move and select
{ "keys": ["ctrl+shift+i"], "command": "move", "args": {"by": "lines", "forward": false, "extend": true}},
{ "keys": ["ctrl+shift+k"], "command": "move", "args": {"by": "lines", "forward": true, "extend": true}},
{ "keys": ["ctrl+shift+l"], "command": "move", "args": {"by": "characters", "forward": true, "extend": true}},
{ "keys": ["ctrl+shift+j"], "command": "move", "args": {"by": "characters", "forward": false, "extend": true}},
{ "keys": ["ctrl+alt+j"], "command": "move", "args": {"by": "subwords", "forward": false} },
{ "keys": ["ctrl+alt+l"], "command": "move", "args": {"by": "subword_ends", "forward": true} },
{ "keys": ["ctrl+alt+shift+j"], "command": "move", "args": {"by": "subwords", "forward": false, "extend": true} },
{ "keys": ["ctrl+alt+shift+l"], "command": "move", "args": {"by": "subword_ends", "forward": true, "extend": true} },
{ "keys": ["ctrl+alt+shift+k"], "command": "move", "args": {"by": "lines", "forward": true, "extend": true} },
{ "keys": ["ctrl+alt+shift+i"], "command": "move", "args": {"by": "lines", "forward": false, "extend": true} },

{ "keys": ["ctrl+shift+super+l"], "command": "move_to", "args": {"to": "eol", "extend": true}},
{ "keys": ["ctrl+shift+super+j"], "command": "move_to", "args": {"to": "bol", "extend": true}},
{ "keys": ["ctrl+shift+super+k"], "command": "move_to", "args": {"to": "eof", "extend": true}},
{ "keys": ["ctrl+shift+super+i"], "command": "move_to", "args": {"to": "bof", "extend": true}},

{ "keys": ["ctrl+alt+i"], "command": "scroll_lines", "args": {"amount": 5.0} },
{ "keys": ["ctrl+alt+k"], "command": "scroll_lines", "args": {"amount": -5.0} },

{ "keys": ["ctrl+super+alt+i"], "command": "swap_line_up" },
{ "keys": ["ctrl+super+alt+k"], "command": "swap_line_down" },

{ "keys": ["alt+shift+k"], "command": "run_macro_file", "args": {"file": "res://Packages/Default/Delete Line.sublime-macro"} },

{ "keys": ["super+alt+shift+8"], "command": "fold" },
{ "keys": ["super+alt+shift+9"], "command": "unfold" },

{ "keys": ["f3"], "command": "next_result" },
{ "keys": ["shift+f3"], "command": "prev_result" },

{ "keys": ["super+shift+c"], "command": "toggle_comment" },
{ "keys": ["ctrl+alt+super+shift+c"], "command": "git_gutter_copy_from_commit" },

{ "keys": ["super+alt+shift+j"], "command": "move_tab", "args": { "position": "-1" } },
{ "keys": ["super+alt+shift+l"], "command": "move_tab", "args": { "position": "+1" } },

{ "keys": ["ctrl+alt+n"], "command": "sublime_linter_goto_error", "args": { "direction": "next", "wrap": true } },
{ "keys": ["ctrl+alt+p"], "command": "sublime_linter_goto_error", "args": { "direction": "previous", "wrap": true } },

{ "keys": ["alt+space"], "command": "insert_snippet", "args": {"contents": " " } }

]
